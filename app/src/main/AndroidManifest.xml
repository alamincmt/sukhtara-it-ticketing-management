<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sukhtaraitint.ticketing_system">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sukhtaraitint.ticketing_system.DailyReportActivity"
            android:parentActivityName="com.sukhtaraitint.ticketing_system.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.sukhtaraitint.ticketing_system.AddNewCounterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sukhtaraitint.ticketing_system.ReportActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sukhtaraitint.ticketing_system.VerifyOTPActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.sukhtaraitint.ticketing_system.SignUpActivity" />
        <activity
            android:name="com.sukhtaraitint.ticketing_system.SignInActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sukhtaraitint.ticketing_system.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>